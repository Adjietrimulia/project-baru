<body>
    <h2>ðŸ’¸ Sistem Perhitungan Ongkir</h2>
    <form method="POST">
        <label>Berat Barang (kg):</label>
        <input type="number" step="0.1" name="berat" required>

        <label>Zona Pengiriman:</label>
        <select name="zona" required>
            <option value="">-- Pilih Zona --</option>
            <option value="jabodetabek">Jabodetabek</option>
            <option value="nonjabodetabek">Non-Jabodetabek</option>
        </select>

        <label>Layanan Pengiriman:</label>
        <select name="layanan" required>
            <option value="reguler">Reguler</option>
            <option value="sameday">Same Day Delivery</option>
        </select>

        <input type="submit" name="hitung" value="Hitung Ongkir">
    </form>

    <?php
    if (isset($_POST['hitung'])) {
        $berat = $_POST['berat'];
        $zona = $_POST['zona'];
        $layanan = $_POST['layanan'];

        if ($berat <= 0) {
            echo "<div class='hasil'><b>âš  Error:</b> Berat barang tidak valid!</div>";
        } else {
            // Tarif dasar
            if ($zona == "jabodetabek") {
                $tarifDasar = 8000;
            } elseif ($zona == "nonjabodetabek") {
                $tarifDasar = 12000;
            } else {
                $tarifDasar = 0;
            }

            // Hitung ongkir
            if ($berat <= 1) {
                $total = $tarifDasar;
            } else {
                $tambahan = ceil($berat - 1) * 5000;
                $total = $tarifDasar + $tambahan;
            }

            // Tambahan biaya sameday
            if ($layanan == "sameday") {
                $total += 10000;
            }

            echo "<div class='hasil'>
                    <h3>ðŸ’° Hasil Perhitungan Ongkir:</h3>
                    <p>Zona Pengiriman: <b>" . ucfirst($zona) . "</b></p>
                    <p>Layanan: <b>" . ucfirst($layanan) . "</b></p>
                    <p>Berat Barang: <b>$berat kg</b></p>
                    <p>Total Ongkir: <b>Rp " . number_format($total, 0, ',', '.') . "</b></p>
                  </div>";
        }
    }
    ?>
</body>
